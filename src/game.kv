<StartScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        # Header
        BoxLayout:
            size_hint_y: 0.15  # 15% for header
            Label:
                text: "Welcome to the Game"
                font_size: 24

        # Body
        BoxLayout:
            id: player_inputs_container
            orientation: 'vertical'
            size_hint_y: 0.65  # 65% for body
            # This will be populated dynamically in the Python code

        # Footer
        BoxLayout:
            size_hint_y: 0.20  # 20% for footer
            Button:
                text: "Start Game"
                on_press: root.start_game(self)

<ScoreboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        # Header
        BoxLayout:
            size_hint_y: 0.15  # 15% for header
            Label:
                text: "Scoreboard"
                font_size: 24
                Label:
                    id: wind_label
                    text: f"Wind der Runde: {root.round_wind}"  # Bind to game property

        # Body
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.65  # 65% for body

            GridLayout:
                id: scoreboard
                cols: 3  # Three columns for Wind, Name, Punkte
                row_default_height: 40
                row_force_default: True
                size_hint_y: 0.65

        # Footer
        BoxLayout:
            size_hint_y: 0.20  # 20% for footer
            Button:
                text: "Add Points"
                on_press: root.go_to_add_points(self)

<GameOverScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        # Header
        BoxLayout:
            size_hint_y: 0.15  # 15% for header
            Label:
                text: "Game Over"
                font_size: 24

        # Body
        BoxLayout:
            size_hint_y: 0.65  # 65% for body

        # Footer
        BoxLayout:
            size_hint_y: 0.20  # 20% for footer
            Button:
                text: "Back to Start"
                on_press: root.manager.current = 'start'

<AddPointsScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        # Header
        BoxLayout:
            size_hint_y: 0.15  # 15% for header
            Label:
                text: "Add Points"
                font_size: 24

        # Body
        BoxLayout:
            id: players_layout
            orientation: 'vertical'
            size_hint_y: 0.65  # 65% for body
            # Player input fields will be added dynamically in Python

        # Footer
        BoxLayout:
            size_hint_y: 0.20  # 20% for footer
            Button:
                text: "Submit Points"
                on_press: root.submit_points()