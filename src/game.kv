#:import config frontend.screens.config

<StartScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        # Header
        BoxLayout:
            size_hint_y: 0.15
            Label:
                text: "Neues Spiel neues Glück!"
                font_size: config.get_font_size(config.FONT_SIZE_RATIO_BIG)

        # Body
        BoxLayout:
            id: player_inputs_container
            orientation: 'vertical'
            size_hint_y: 0.70

        # Footer
        BoxLayout:
            size_hint_y: 0.15
            Button:
                text: "Spiel starten"
                font_size: config.get_font_size(config.FONT_SIZE_RATIO_MEDIUM)
                on_press: root.start_game(self)

<ScoreboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        # Header
        BoxLayout:
            size_hint_y: 0.15
            Label:
                text: f"Punktestand Runde {root.current_round_number}"
                font_size: config.get_font_size(config.FONT_SIZE_RATIO_BIG)

        # Body
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.70

            GridLayout:
                id: scoreboard
                cols: 3
                spacing: 0
                row_default_height: self.parent.height * 0.15

        # Footer
        BoxLayout:
            size_hint_y: 0.15
            Button:
                text: "Punkte eingeben"
                font_size: config.get_font_size(config.FONT_SIZE_RATIO_MEDIUM)
                on_press: root.go_to_add_points(self)

<AddPointsScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        # Header
        BoxLayout:
            size_hint_y: 0.15
            orientation: 'vertical'
            Label:
                text: f"Eingabe für Runde {root.current_round_number}"
                font_size: config.get_font_size(config.FONT_SIZE_RATIO_BIG)

        # Table Header
        GridLayout:
            size_hint_y: 0.1
            cols: 4
            Label:
                text: "Spieler"
                font_size: config.get_font_size(config.FONT_SIZE_RATIO_BIG)
            Label:
                text: "Punkte"
                font_size: config.get_font_size(config.FONT_SIZE_RATIO_BIG)
            Label:
                text: "# Verdopplungen"
                font_size: config.get_font_size(config.FONT_SIZE_RATIO_BIG)
            Label:
                text: "Gewinner"
                font_size: config.get_font_size(config.FONT_SIZE_RATIO_BIG)

        # Body
        BoxLayout:
            id: players_layout
            orientation: 'vertical'
            spacing: 0
            size_hint_y: 0.60

        # Footer
        BoxLayout:
            size_hint_y: 0.15
            Button:
                text: "Punkte anwenden"
                font_size: config.get_font_size(config.FONT_SIZE_RATIO_MEDIUM)
                on_press: root.submit_points()

<GameOverScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        # Header
        BoxLayout:
            size_hint_y: 0.15
            Label:
                text: root.winner_text
                font_size: config.get_font_size(config.FONT_SIZE_RATIO_BIG)
                bold: True

        # Body
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.70

            GridLayout:
                id: scoreboard
                cols: 3
                spacing: 0
                row_default_height: self.parent.height * 0.15

        # Footer
        BoxLayout:
            size_hint_y: 0.15
            Button:
                text: "Neues Spiel"
                font_size: config.get_font_size(config.FONT_SIZE_RATIO_MEDIUM)
                on_press: root.manager.current = 'start'
                disabled: True
